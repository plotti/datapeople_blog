    {% set tag = url_param('tag', 'string') %}
    <div class="blog-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    <div class="posts-list">
                        {% for page in pages(depthOffset=-1)|apply_tag_filter|sort_by("time")|reverse if not page.hidden %}
                        {% if tag %}
                            {% set pageTags = page.meta.tags|split(',')%}
                            {% if tag in pageTags %}
                                <div class="post-single">
                                    <a class="post-media" href="{{page.url}}">
                                        <figure>
                                            <img src="{{ assets_url }}/{{ page.meta.img }}" alt="">
                                        </figure>
                                    </a>
                                    <div class="post-content">
                                        <div class="post-meta">
                                            <span class="author meta-item"><i title="Post Author" class="fa fa-user-o"></i>{{page.author}}</span>
                                            <span class="meta-item"><i class="fa fa-clock-o"></i> <a href="">{{ page.date|date("d.m.Y") }}</a></span>
                                            <span class="cat-list meta-item">
                                                <i class="fa fa-tags"></i>
                                                {% for tag in page.meta.tags|split(',') %}
                                                    <a href="{{ base_url }}?tag={{tag}}" rel="category tag">{{tag}}</a>,
                                                {% endfor %}
                                            </span>
                                        </div>
                                        <h2 class="post-title"><a href="{{ page.url }}" rel="bookmark">{{ page.title }}</a></h2>
                                        <div class="post-desc">
                                            <p>{{ page.description }}</p>
                                        </div> <a href="{{ page.url }}" class="bttn-more">Mehr lesen</a>
                                    </div>
                                </div>
                            {% endif %}
                        {% else %}
                                <div class="post-single">
                                    <a class="post-media" href="{{page.url}}">
                                        <figure>
                                            <img src="{{ assets_url }}/{{ page.meta.img }}" alt="">
                                        </figure>
                                    </a>
                                    <div class="post-content">
                                        <div class="post-meta">
                                            <span class="author meta-item"><i title="Post Author" class="fa fa-user-o"></i>{{page.author}}</span>
                                            <span class="meta-item"><i class="fa fa-clock-o"></i> <a href="">{{ page.date|date("d.m.Y") }}</a></span>
                                            <span class="cat-list meta-item">
                                                <i class="fa fa-tags"></i>
                                                {% for tag in page.meta.tags|split(',') %}
                                                    <a href="{{ base_url }}?tag={{tag}}" rel="category tag">{{tag}}</a>,
                                                {% endfor %}
                                            </span>
                                        </div>
                                        <h2 class="post-title"><a href="{{ page.url }}" rel="bookmark">{{ page.title }}</a></h2>
                                        <div class="post-desc">
                                            <p>{{ page.description }}</p>
                                        </div> <a href="{{ page.url }}" class="bttn-more">Mehr lesen</a>
                                    </div>
                                </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                    <!-- Post-Pagination -->

                          

                    {% if page_number > 1 %}
                    <nav class="navigation pagination">
                        <div class="nav-links">
                            <a class="previus page-numbers" href="{{ base_url }}/{{ page_indicator }}/{{ page_number - 1 }}">
                                <i class="fa fa-angle-left"></i>
                            </a>
                        </div>
                    </nav>
                    {% endif %}
                    
                    {% if page_number < total_pages %} 
                    <nav class="navigation pagination">
                        <div class="nav-links">
                            <a class="next page-numbers" href="{ base_url }}/{{ page_indicator }}/{{ page_number + 1 }}">
